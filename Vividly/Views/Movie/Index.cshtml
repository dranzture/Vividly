@model Vividly.View_Models.MovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="container">
    @Html.ActionLink("New", "New", "Movie", new { @class = "btn btn-primary" })

</div>
<br>
@if (Model.Movies.Count == 0)
{
    <p>There are no movies</p>
}
else
{
    <table class="table table-bordered table-hover">
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Edit","Movie", new { id = movie.ID })">@movie.Name</a>
                </td>               
            </tr>
        }
    </table>
}

