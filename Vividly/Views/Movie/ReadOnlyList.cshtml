@model Vividly.View_Models.MovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<br>

<table id="movies" class="table table-bordered table-hover">
      <thead>
          <tr>
              <th>Movie</th>
              <th>Genre</th>
          </tr>
      </thead>
    <tbody>

    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "http://localhost:8080/api/movie",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        
                    },
                    {
                        data: "genre.type"
                    }
                ]
            });
            
        });
    </script>
}