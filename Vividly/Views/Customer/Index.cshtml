@model Vividly.View_Models.CustomersViewModel
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Customers.Count == 0)
{
    <p>There is no customer</p>
}
else
{
    <table class="table table-bordered table-hover">
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details","Customer", new { id = customer.ID })" style="text-decoration:none">@customer.FirstName @customer.LastName</a>
                </td>
            </tr>
        }
    </table>
}




